{
  "name": "git-truck",
  "version": "2.0.12",
  "private": false,
  "description": "Visualizing a Git repository",
  "license": "MIT",
  "main": "./cli.js",
  "bin": "./cli.js",
  "files": [
    "LICENSE",
    "README.md",
    "build/",
    "public/",
    "cli.js"
  ],
  "type": "module",
  "scripts": {
    "test": "npm run test:e2e && npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "pretest:e2e": "npm run build",
    "pretest:e2e:headed": "npm run build",
    "build": "cross-env NODE_ENV=production npm run build-vite && npm run build-cli",
    "build-cli": "cross-env NODE_ENV=production tsdown",
    "build-vite": "react-router build",
    "dev": "tsx ./src/cli.ts",
    "dev:debug": "tsx ./src/cli.ts --log debug",
    "start": "cross-env NODE_ENV=production node .",
    "clean": "npx -y rimraf build .react-router .cache .temp cli.js cli.cjs",
    "typecheck": "react-router typegen && tsc -b",
    "typegen:watch": "react-router typegen --watch",
    "pub-pre": "npm version prerelease && npm publish --tag next",
    "pub-exp": "node ./scripts/publish-experimental",
    "prepublishOnly": "npm run clean && npm run build",
    "format:write": "prettier --log-level warn --write src scripts e2e",
    "lint:fix": "eslint --fix --cache",
    "check:write": "npm run format:write && npm run lint:fix",
    "check": "npm run format:check && npm run lint",
    "format:check": "prettier --check src scripts e2e",
    "lint": "eslint --cache",
    "prepare": "node .husky/install.mjs",
    "update-deps": "npx npm-check-updates -i",
    "knip": "knip"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.3.0-alpha.21",
    "@react-router/express": "^7.6.2"
  },
  "devDependencies": {
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "@playwright/test": "^1.52.0",
    "@react-router/dev": "^7.6.2",
    "@react-router/fs-routes": "^7.6.2",
    "@react-router/node": "^7.6.2",
    "@tailwindcss/vite": "^4.1.8",
    "@types/byte-size": "^8.1.2",
    "@types/color-convert": "^2.0.4",
    "@types/d3": "^7.4.3",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/express": "^4.17.22",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/node": "^22.15.30",
    "@types/randomstring": "^1.3.0",
    "@types/react": "^19.1.6",
    "@types/react-detect-offline": "^2.4.5",
    "@types/react-dom": "^19.1.6",
    "@types/semver": "^7.7.0",
    "@types/sha1": "^1.1.5",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "ansi-colors": "^4.1.3",
    "byte-size": "^9.0.1",
    "clsx": "^2.1.1",
    "color-convert": "^3.1.0",
    "cross-env": "^7.0.3",
    "d3": "^7.9.0",
    "d3-hierarchy": "^3.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "express": "^5.1.0",
    "get-port": "^7.1.0",
    "husky": "^9.1.7",
    "ignore": "^7.0.5",
    "knip": "^5.60.2",
    "language-map": "^1.5.0",
    "lint-staged": "^16.1.0",
    "nanospinner": "^1.2.2",
    "npm-check-updates": "^18.0.1",
    "open": "^10.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "randomstring": "^1.3.1",
    "react": "^19.1.0",
    "react-colorful": "^5.6.1",
    "react-compound-slider": "^3.4.0",
    "react-datepicker": "^8.4.0",
    "react-detect-offline": "^2.4.5",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.1.0",
    "react-github-btn": "^1.4.0",
    "react-router": "^7.6.2",
    "react-router-devtools": "^5.0.6",
    "react-spinners": "^0.17.0",
    "react-tiny-popover": "^8.1.6",
    "react-use-size": "^5.0.1",
    "semver": "^7.7.2",
    "sha1": "^1.1.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "tsdown": "^0.12.7",
    "tsx": "^4.19.4",
    "typescript": "5.8",
    "typescript-eslint": "^8.33.1",
    "uniqolor": "^1.1.1",
    "vite": "npm:rolldown-vite@^6.3.18",
    "vite-plugin-cjs-interop": "^2.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2",
    "yargs-parser": "^22.0.0"
  },
  "tsdown": {
    "entry": "./src/cli.ts",
    "outDir": ".",
    "treeshake": true,
    "clean": false,
    "external": [
      "vite",
      "lightningcss"
    ],
    "cjs-interop": true,
    "env": {
      "NODE_ENV": "production"
    }
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "trailingComma": "none",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "lint-staged": {
    "{src,scripts}/**/*.{ts,tsx,js,mjs}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "knip": {
    "entry": [
      ".react-router/**/*",
      "src/**/*.{ts,tsx}",
      "src/*.{ts,tsx}",
      "scripts/**/*.{ts,js}"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/git-truck/git-truck.git"
  },
  "bugs": {
    "url": "https://github.com/git-truck/git-truck/issues"
  },
  "homepage": "https://github.com/git-truck/git-truck#readme"
}
