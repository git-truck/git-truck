{
  "name": "git-truck",
  "version": "2.0.4",
  "private": false,
  "description": "Visualizing a Git repository",
  "license": "MIT",
  "main": "./cli.cjs",
  "bin": "./cli.cjs",
  "files": [
    "LICENSE",
    "README.md",
    "build/",
    "public/",
    "cli.cjs"
  ],
  "type": "module",
  "scripts": {
    "test": "npm run test:e2e && npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "pretest:e2e": "npm run build",
    "pretest:e2e:headed": "npm run build",
    "build": "cross-env NODE_ENV=production npm run build-vite && npm run build-cli",
    "build-cli": "tsup --treeshake --out-dir . ./src/cli.ts --external vite lightningcss --format cjs --loader \".json=base64\" --cjsInterop --env.NODE_ENV production",
    "build-vite": "react-router build",
    "dev": "tsx ./src/cli.ts",
    "dev:debug": "tsx ./src/cli.ts --log debug",
    "start": "cross-env NODE_ENV=production node .",
    "serve": "react-router-serve build/server/index.js",
    "clean": "rimraf -rf build public/build .cache .temp cli.js cli.cjs",
    "typecheck": "react-router typegen && tsc",
    "pub-pre": "npm version prerelease && npm publish --tag next",
    "pub-exp": "node ./scripts/publish-experimental",
    "prepublishOnly": "npm run clean && npm run build",
    "format:write": "prettier --log-level warn --write src scripts e2e",
    "lint:fix": "eslint --fix --cache src scripts e2e",
    "check:write": "npm run format:write && npm run lint:fix",
    "check": "npm run format:check && npm run lint",
    "format:check": "prettier --check src scripts e2e",
    "lint": "eslint --cache src scripts e2e"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.2.0-alpha.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@floating-ui/react": "^0.27.4",
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "@playwright/test": "^1.50.1",
    "@react-router/dev": "7.1.5",
    "@react-router/express": "7.1.5",
    "@react-router/fs-routes": "7.1.5",
    "@react-router/node": "7.1.5",
    "@react-router/serve": "7.1.5",
    "@styled-icons/material": "^10.47.0",
    "@styled-icons/material-outlined": "^10.47.0",
    "@styled-icons/octicons": "^10.47.0",
    "@tailwindcss/vite": "^4.0.6",
    "@types/byte-size": "^8.1.2",
    "@types/color-convert": "^2.0.4",
    "@types/compression": "^1.7.5",
    "@types/d3": "^7.4.3",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "@types/randomstring": "^1.3.0",
    "@types/react": "^19.0.8",
    "@types/react-detect-offline": "^2.4.5",
    "@types/react-dom": "^19.0.3",
    "@types/semver": "^7.5.8",
    "@types/sha1": "^1.1.5",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "ansi-colors": "^4.1.3",
    "apache-arrow": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "byte-size": "^9.0.1",
    "clsx": "^2.1.1",
    "color-convert": "^3.0.1",
    "compression": "^1.8.0",
    "cross-env": "^7.0.3",
    "d3": "^7.9.0",
    "d3-hierarchy": "^3.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "express": "^4.21.2",
    "express-serve-static-core": "^0.1.1",
    "get-port": "^7.1.0",
    "gitignore-parser": "^0.0.2",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "ignore": "^7.0.3",
    "is-binary-path": "^3.0.0",
    "language-map": "^1.5.0",
    "lint-staged": "^15.4.3",
    "morgan": "^1.10.0",
    "nanospinner": "^1.2.2",
    "open": "^10.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "randomstring": "^1.3.1",
    "react": "^19.0.0",
    "react-colorful": "^5.6.1",
    "react-compound-slider": "^3.4.0",
    "react-datepicker": "^8.0.0",
    "react-detect-offline": "^2.4.5",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.0.0",
    "react-github-btn": "^1.4.0",
    "react-konami-code": "^2.3.0",
    "react-router": "^7.1.5",
    "react-spinners": "^0.15.0",
    "react-tiny-popover": "^8.1.6",
    "react-use-size": "^5.0.1",
    "rimraf": "^6.0.1",
    "semver": "^7.7.1",
    "sha1": "^1.1.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "tiny-invariant": "^1.3.3",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "5.7",
    "typescript-eslint": "^8.24.0",
    "uniqolor": "^1.1.1",
    "vite": "^6.1.0",
    "vite-plugin-cjs-interop": "^2.1.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "yargs": "^17.7.2"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "trailingComma": "none",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "lint-staged": {
    "{src,scripts}/**/*.{ts,tsx,js,mjs}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/git-truck/git-truck.git"
  },
  "bugs": {
    "url": "https://github.com/git-truck/git-truck/issues"
  },
  "homepage": "https://github.com/git-truck/git-truck#readme"
}
