{
  "name": "git-truck",
  "version": "1.2.0-2",
  "private": false,
  "description": "Visualizing a Git repository",
  "license": "MIT",
  "main": "./build/index.js",
  "bin": "./cli.js",
  "files": [
    "LICENSE",
    "README.md",
    "build/",
    "public/",
    "cli.js"
  ],
  "scripts": {
    "test": "jest --coverage",
    "build": "remix build && node ./scripts/build-cli.js",
    "dev": "remix dev",
    "start": "remix-serve build",
    "clean": "rimraf -rf build public/build .cache .temp",
    "tsc": "tsc",
    "prepublishOnly": "npm install && npm run build",
    "format": "eslint --cache --fix src/**/*.{ts,tsx} && prettier --loglevel warn --write src/**/*.{ts,tsx}",
    "lint": "eslint --cache --fix src/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@remix-run/serve": "^1.7.1",
    "@react-aria/utils": "^3.13.3",
    "@react-spring/web": "^9.5.4",
    "@remix-run/dev": "^1.7.1",
    "@remix-run/eslint-config": "^1.7.1",
    "@remix-run/express": "^1.7.1",
    "@remix-run/node": "^1.7.1",
    "@remix-run/react": "^1.7.1",
    "@styled-icons/material": "^10.46.0",
    "@styled-icons/material-outlined": "^10.46.0",
    "@styled-icons/octicons": "^10.46.0",
    "@types/byte-size": "^8.1.0",
    "@types/compression": "^1.7.2",
    "@types/d3-hierarchy": "^3.1.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/morgan": "^1.9.3",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/semver": "^7.3.12",
    "@types/semver-compare": "^1.0.1",
    "@types/styled-components": "^5.1.26",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "byte-size": "^8.1.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "d3-hierarchy": "^3.1.2",
    "distinct-colors": "^3.0.0",
    "dotenv": "^16.0.2",
    "esbuild": "^0.15.8",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "express": "^4.18.1",
    "get-port": "^6.1.2",
    "github-colors": "git+https://github.com/ozh/github-colors.git",
    "husky": "^8.0.1",
    "ignore": "^5.2.0",
    "jest": "^29.0.3",
    "lang-map": "^0.4.0",
    "latest-version": "^7.0.0",
    "lint-staged": "^13.0.3",
    "morgan": "^1.10.0",
    "nanospinner": "^1.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "open": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konami-code": "^2.3.0",
    "react-use": "^17.4.0",
    "react-use-size": "^3.0.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "styled-components": "^5.3.5",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3",
    "yargs": "^17.5.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/git-truck/git-truck.git"
  },
  "bugs": {
    "url": "https://github.com/git-truck/git-truck/issues"
  },
  "homepage": "https://github.com/git-truck/git-truck#readme"
}
