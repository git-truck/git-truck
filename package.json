{
  "name": "git-truck",
  "version": "1.2.0",
  "private": false,
  "description": "Visualizing a Git repository",
  "license": "MIT",
  "main": "./cli.js",
  "bin": "./cli.js",
  "files": [
    "LICENSE",
    "README.md",
    "build/",
    "public/",
    "cli.js"
  ],
  "scripts": {
    "test": "jest --coverage",
    "build": "remix build && npm run build-cli",
    "build-cli": "node ./scripts/build-cli.js",
    "dev": "remix dev",
    "watch": "remix watch",
    "start": "remix-serve build",
    "clean": "rimraf -rf build public/build .cache .temp",
    "tsc": "tsc",
    "pub-pre": "npm version prerelease && npm publish --tag next",
    "pub-exp": "node ./scripts/publish-experimental.js",
    "prepublishOnly": "npm run clean && npm run build",
    "format": "eslint --cache --fix {src,scripts}/**/*.{ts,tsx,js,mjs} && prettier --loglevel warn --write {src,scripts}/**/*.{ts,tsx,js,mjs}",
    "lint": "eslint --cache --fix {src,scripts}/**/*.{ts,tsx,js,mjs}"
  },
  "devDependencies": {
    "@react-spring/web": "^9.5.5",
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@styled-icons/material": "^10.46.0",
    "@styled-icons/material-outlined": "^10.46.0",
    "@styled-icons/octicons": "^10.46.0",
    "@types/byte-size": "^8.1.0",
    "@types/d3-hierarchy": "^3.1.0",
    "@types/d3-interpolate": "^3.0.1",
    "@types/d3-interpolate-path": "^2.0.0",
    "@types/jest": "^29.1.2",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/semver": "^7.3.12",
    "@types/styled-components": "^5.1.26",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "byte-size": "^8.1.0",
    "cross-env": "^7.0.3",
    "d3-hierarchy": "^3.1.2",
    "d3-interpolate": "^3.0.1",
    "d3-interpolate-path": "^2.3.0",
    "distinct-colors": "^3.0.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.11",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "get-port": "^6.1.2",
    "github-colors": "github:ozh/github-colors",
    "gitignore-parser": "^0.0.2",
    "husky": "^8.0.1",
    "ignore": "^5.2.0",
    "is-binary-path": "^2.1.0",
    "jest": "^29.2.0",
    "lang-map": "^0.4.0",
    "latest-version": "^7.0.0",
    "lint-staged": "^13.0.3",
    "nanospinner": "^1.1.0",
    "open": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konami-code": "^2.3.0",
    "react-use": "^17.4.0",
    "react-use-size": "^3.0.0",
    "remix-typedjson": "^0.1.3",
    "rimraf": "^3.0.2",
    "semver": "^7.3.8",
    "styled-components": "^5.3.6",
    "tiny-invariant": "^1.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "yargs": "^17.6.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "lint-staged": {
    "{src,scripts}/**/*.{ts,tsx,js,mjs}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/git-truck/git-truck.git"
  },
  "bugs": {
    "url": "https://github.com/git-truck/git-truck/issues"
  },
  "homepage": "https://github.com/git-truck/git-truck#readme"
}
