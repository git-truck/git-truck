{
  "name": "git-truck",
  "version": "0.8.10",
  "private": false,
  "description": "Visualizing a Git repository",
  "license": "MIT",
  "main": "./build/index.js",
  "bin": "./build/index.js",
  "scripts": {
    "test": "jest --coverage",
    "clean": "rimraf -rf build public/build .cache .temp",
    "tsc": "tsc",
    "build": "rimraf -rf build public/build && remix setup node && cross-env NODE_ENV=production remix build && node ./post-build.js",
    "dev": "cross-env NODE_ENV=development remix build && node dev.js",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "postinstall": "npm run build",
    "dev:node": "cross-env NODE_ENV=development nodemon --watch ./build/index.js ./build/index.js --",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "format": "eslint --cache --fix src/**/*.{ts,tsx} && prettier --loglevel warn --write src/**/*.{ts,tsx}"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@react-aria/utils": "^3.11.3",
    "@react-spring/web": "^9.4.4",
    "@remix-run/dev": "^1.3.3",
    "@remix-run/express": "^1.3.3",
    "@remix-run/react": "^1.3.3",
    "@remix-run/serve": "^1.3.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "d3-hierarchy": "^3.1.1",
    "distinct-colors": "^3.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "fs-extra": "^10.0.1",
    "get-port": "^6.1.2",
    "github-colors": "git+https://github.com/ozh/github-colors.git",
    "ignore": "^5.2.0",
    "is-binary-path": "^2.1.0",
    "lang-map": "^0.4.0",
    "latest-version": "^6.0.0",
    "morgan": "^1.10.0",
    "nanospinner": "^1.0.0",
    "open": "^8.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-konami-code": "^2.2.2",
    "react-use": "^17.3.2",
    "react-use-size": "^2.0.4",
    "remix": "^1.2.3",
    "semver-compare": "^1.0.0",
    "styled-components": "^5.3.3",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^1.2.3",
    "@types/compression": "^1.7.2",
    "@types/d3-hierarchy": "^3.0.2",
    "@types/express": "^4.17.13",
    "@types/gitignore-parser": "^0.0.0",
    "@types/jest": "^27.4.1",
    "@types/morgan": "^1.9.3",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.9",
    "@types/semver-compare": "^1.0.1",
    "@types/styled-components": "^5.1.24",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/git-truck/git-truck.git"
  },
  "bugs": {
    "url": "https://github.com/git-truck/git-truck/issues"
  },
  "homepage": "https://github.com/git-truck/git-truck#readme"
}
